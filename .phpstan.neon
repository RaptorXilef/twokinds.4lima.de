parameters:
    # Level 0 ist Basis-Checks, 9 (oder 'max') ist extrem strikt.
    # Level 5 ist ein guter Mittelweg für den Start.
    # Level max ist sehr streng, wie in der composer.json definiert
    level: 5

    paths:
        - src
        - tests

    # Temporäres Verzeichnis für Cache (beschleunigt die Analyse)
    tmpDir: .cache/phpstan

    # Da ich PHP 8.3 nutzte, aktivieren wir die "Bleeding Edge" Features.
    # Dies schaltet die neuesten (strikteren) Regeln von PHPStan frei.
    # (Entferne das '#' am Anfang der nächsten Zeile, um es zu aktivieren)
    # bootstrapFiles:
    #    - vendor/phpstan/phpstan/conf/bleedingEdge.neon

    # Hilfreich für PHP 8.3: Typsicherheit bei Arrays und Iterables
    # checkMissingIterableValueType: true

    # Erkennt tote Catch-Blöcke oder ungenutzte Properties (neu in 2.0+)
    rememberPossiblyImpureFunctionValues: true
    # checkImplicitAnyType: true
