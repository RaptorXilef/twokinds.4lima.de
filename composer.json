{
  "name": "raptorxilef/twokinds.4lima.de",
  "description": "Dieses Projekt ist eine PHP-basierte Webseite zur Anzeige und Verwaltung der deutschen Ãœbersetzungen des Webcomics \"Twokinds\".",
  "type": "project",
  "license": "CC-BY-NC-SA-4.0",
  "authors": [
    {
      "name": "Felix Maywald",
      "email": "31962607+RaptorXilef@users.noreply.github.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.3 <8.4",
    "scssphp/scssphp": "^2.1",
    "matthiasmullie/minify": "^1.3",
    "ezyang/htmlpurifier": "^4.19",
    "ext-zip": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^12.5",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.2",
    "squizlabs/php_codesniffer": "^4.0",
    "phpcsstandards/phpcsextra": "^1.5",
    "phpcsstandards/phpcsutils": "^1.2",
    "pheromone/phpcs-security-audit": "^2.0",
    "slevomat/coding-standard": "^8.22",
    "php-http/discovery": "^1.20"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "post-install-cmd": [
      "echo 'Die Installation ist abgeschlossen. CodeSniffer und PHPStan sind bereit.'"
    ],
    "lint": "phpcs",
    "lint:src": "phpcs src/",
    "lint:tests": "phpcs tests/",
    "fix": "phpcbf",
    "fix:src": "phpcbf src/",
    "fix:tests": "phpcbf tests/",
    "analyze": "phpstan analyse --memory-limit=1G",
    "analyse": "phpstan analyse --memory-limit=1G",
    "test": "phpunit",
    "ci:lint-psr12": "phpcs --standard=.phpcs-psr12.xml",
    "ci:fix-psr12": "phpcbf --standard=.phpcs-psr12.xml",
    "ci:lint-modern": "phpcs --standard=.phpcs-modern.xml",
    "ci:fix-modern": "phpcbf --standard=.phpcs-modern.xml",
    "ci:lint-array": "phpcs --standard=.phpcs-array.xml",
    "ci:fix-array": "phpcbf --standard=.phpcs-array.xml",
    "ci:lint-universal": "phpcs --standard=.phpcs-universal.xml",
    "ci:fix-universal": "phpcbf --standard=.phpcs-universal.xml",
    "ci:lint-slevomat-coding-standard": "phpcs --standard=.phpcs-slevomat-coding-standard-ruleset.xml",
    "ci:fix-slevomat-coding-standard": "phpcbf --standard=.phpcs-slevomat-coding-standard-ruleset.xml",
    "ci:lint-drupal7-security-base": "phpcs --extensions=php,inc,lib,module,info --standard=.phpcs-drupal7-security-base-ruleset.xml",
    "ci:fix-drupal7-security-base": "phpcbf --extensions=php,inc,lib,module,info --standard=.phpcs-drupal7-security-base-ruleset.xml",
    "ci:lint-drupal7-security-paranoia": "phpcs --extensions=php,inc,lib,module,info --standard=.phpcs-drupal7-security-paranoia-ruleset.xml",
    "ci:fix-drupal7-security-paranoia": "phpcbf --extensions=php,inc,lib,module,info --standard=.phpcs-drupal7-security-paranoia-ruleset.xml",
    "ci:lint-psr12-src": "@ci:lint-psr12 src/",
    "ci:lint-psr12-tests": "@ci:lint-psr12 tests/",
    "ci:lint-modern-src": "@ci:lint-modern src/",
    "ci:lint-modern-tests": "@ci:lint-modern tests/",
    "ci:lint-array-src": "@ci:lint-array src/",
    "ci:lint-array-tests": "@ci:lint-array tests/",
    "ci:lint-universal-src": "@ci:lint-universal src/",
    "ci:lint-universal-tests": "@ci:lint-universal tests/",
    "ci:lint-slevomat-coding-standard-src": "@ci:lint-slevomat-coding-standard src/",
    "ci:lint-slevomat-coding-standard-tests": "@ci:lint-slevomat-coding-standard tests/",
    "ci:lint-drupal7-security-base-src": "@ci:lint-drupal7-security-base src/",
    "ci:lint-drupal7-security-base-tests": "@ci:lint-drupal7-security-base tests/",
    "ci:lint-drupal7-security-paranoia-src": "@ci:lint-drupal7-security-paranoia src/",
    "ci:lint-drupal7-security-paranoia-tests": "@ci:lint-drupal7-security-paranoia tests/",
    "ci:fix-psr12-src": "@ci:fix-psr12 src/",
    "ci:fix-psr12-tests": "@ci:fix-psr12 tests/",
    "ci:fix-modern-src": "@ci:fix-modern src/",
    "ci:fix-modern-tests": "@ci:fix-modern tests/",
    "ci:fix-array-src": "@ci:fix-array src/",
    "ci:fix-array-tests": "@ci:fix-array tests/",
    "ci:fix-universal-src": "@ci:fix-universal src/",
    "ci:fix-universal-tests": "@ci:fix-universal tests/",
    "ci:fix-slevomat-coding-standard-src": "@ci:fix-slevomat-coding-standard src/",
    "ci:fix-slevomat-coding-standard-tests": "@ci:fix-slevomat-coding-standard tests/",
    "ci:fix-drupal7-security-base-src": "@ci:fix-drupal7-security-base src/",
    "ci:fix-drupal7-security-base-tests": "@ci:fix-drupal7-security-base tests/",
    "ci:fix-drupal7-security-paranoia-src": "@ci:fix-drupal7-security-paranoia src/",
    "ci:fix-drupal7-security-paranoia-tests": "@ci:fix-drupal7-security-paranoia tests/"
  }
}
