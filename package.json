{
  "name": "twokinds-frontend",
  "version": "5.0.0-alpha.16",
  "description": "Frontend-Setup mit PostCSS, Sass und striktem Linting.",
  "scripts": {
    "// --- INFRASTRUKTUR & SETUP ---": "",
    "pkg:ins": "npm install -g npm-check-updates",
    "pkg:up": "ncu -u && npm install",
    "// Aktualisiert alle Abhängigkeiten in der package.json auf die neueste Version und installiert sie.": "",
    "pkg:chk": "ncu",
    "// Prüft ohne zu schreiben, welche Pakete aktualisiert werden könnten.": "",
    "clear": "npm-run-all2 clear:*",
    "// Master-Befehl zum vollständigen Leeren aller temporären Asset-Verzeichnisse.": "",
    "clear:css": "rimraf public/assets/css/*",
    "// Löscht gezielt alle generierten CSS-Dateien.": "",
    "clear:js": "rimraf public/assets/js/*",
    "// Löscht gezielt alle generierten JavaScript-Dateien.": "",
    "// --- ENTWICKLUNG (LIVE) ---": "",
    "dev": "npm-run-all2 --parallel dev:*",
    "// Startet den kombinierten Watch-Modus für eine flüssige Entwicklung.": "",
    "dev:css": "sass --watch resources/scss/main.scss:public/assets/css/main.min.css --source-map",
    "// Überwacht SCSS-Änderungen und generiert sofort CSS mit Debug-Informationen.": "",
    "dev:js": "cpx \"resources/js/main.js\" public/assets/js/ --rename main.min.js --watch",
    "// Spiegelt JS-Änderungen sofort in den öffentlichen Assets-Ordner.": "",
    "// --- QUALITÄTSSICHERUNG (QA) ---": "",
    "chk": "npm-run-all2 chk:*",
    "// Führt die komplette Suite aller statischen Code-Analysen und Linter aus.": "",
    "chk:js": "eslint resources/js",
    "// Validiert die JavaScript-Logik und die Einhaltung von Best Practices.": "",
    "chk:css": "stylelint \"resources/scss/**/*.scss\"",
    "// Prüft SCSS-Strukturen und erzwingt die Nutzung von Variablen.": "",
    "chk:sp": "cspell lint \"**/*.{js,scss,php,md}\" --no-progress",
    "// Scannt das gesamte Projekt auf Tippfehler in Kommentaren und Code.": "",
    "chk:md": "markdownlint \"**/*.md\" --ignore node_modules",
    "// Stellt sicher, dass die Dokumentation sauber formatiert ist.": "",
    "//chk:perf": "lhci autorun --config-path=./lighthouserc.json",
    "chk:perf": "lhci autorun --config-path=./lighthouserc.json",
    "chk:perf:local": "npm-run-all2 --parallel chk:perf:local:mobile chk:perf:local:desktop",
    "//chk:perf:local": "powershell -Command \"$dt = Get-Date -Format 'yyyy-MM-dd_HH-mm'; npm run chk:perf:local:mobile -- --upload.outputDir=.build/reports/lighthouse/${dt}_mobile; npm run chk:perf:local:desktop -- --upload.outputDir=.build/reports/lighthouse/${dt}_desktop\"",
    "//chk:perf:local:mobile": "lhci autorun --config=lighthouserc-local.json --collect.settings.emulatedFormFactor=mobile --output html --output-path .build/reports/lighthouseci-m.html",
    "//chk:perf:local:desktop": "lhci autorun --config=lighthouserc-local.json --collect.settings.emulatedFormFactor=desktop --output html --output-path .build/reports/lighthouseci-d.html",
    "//chk:perf:local:powershell": "lighthouse https://twokinds.4lima.local --output html --output-path .build/reports/lighthouseci.html --view --chrome-flags=\"--no-sandbox --ignore-certificate-errors\"",
    "// Führt automatisierte Performance-Audits via Lighthouse durch.": "",
    "chk:sec": "npm audit",
    "// Analysiert installierte Pakete auf bekannte Sicherheitsrisiken.": "",
    "ci:chk:a11y": "pa11y-ci",
    "// Prüft die Barrierefreiheit (A11y) für automatisierte Umgebungen.": "",
    "chk:a11y": "pa11y https://twokinds.4lima.local",
    "// Führt einen detaillierten Barrierefreiheits-Check auf der lokalen URL aus.": "",
    "// --- TESTING ---": "",
    "test": "vitest",
    "// Startet Unit-Tests im interaktiven Watch-Modus.": "",
    "test:ui": "vitest --ui",
    "// Öffnet das grafische Dashboard für Testergebnisse im Browser.": "",
    "test:cov": "vitest run --coverage",
    "// Führt alle Tests aus und berechnet die prozentuale Code-Abdeckung.": "",
    "// --- AUTOMATISCHE KORREKTUR (FIX) ---": "",
    "fmt": "npm-run-all2 fmt:*",
    "// Master-Befehl zur automatischen Formatierung des gesamten Quellcodes.": "",
    "fmt:js": "prettier \"resources/js/**/*.js\" --write",
    "// Repariert Einrückungen und Stilfehler in JavaScript-Dateien.": "",
    "fmt:css": "prettier \"resources/scss/**/*.scss\" --write && stylelint \"resources/scss/**/*.scss\" --fix",
    "// Formatiert SCSS und korrigiert automatisch behebbare Linting-Fehler.": "",
    "fmt:html": "prettier \"**/*.html\" --write",
    "// Bringt HTML-Dateien in eine saubere, lesbare Struktur.": "",
    "// --- PRODUKTION (BUILD) ---": "",
    "make": "npm-run-all2 clear ci:make:powershell make:css opt",
    "// Erstellt den fertigen Produktions-Build: Clean -> Build -> Optimize.": "",
    "//make:js": "terser resources/js/main.js -o public/assets/js/main.min.js --compress --mangle",
    "ci:make:js": "find resources/js -name '*.js' -exec sh -c 'mkdir -p \"public/assets/js/$(dirname \"${1#resources/js/}\")\" && terser \"$1\" -o \"public/assets/js/${1#resources/js/}\" --compress --mangle' _ {} \\;",
    "make:js:linux": "find resources/js -name '*.js' -exec sh -c 'terser \"$1\" -o \"public/assets/js/${1#resources/js/}\" --compress --mangle' _ {} \\;",
    "make:js:gitbash": "find resources/js -name '*.js' -exec sh -c 'mkdir -p \"public/assets/js/$(dirname \"${1#resources/js/}\")\" && terser \"$1\" -o \"public/assets/js/${1#resources/js/}\" --compress --mangle' _ {} \\;",
    "make:js:powershell": "powershell -ExecutionPolicy Bypass -Command \"Get-ChildItem -Path resources/js -Filter *.js -Recurse | ForEach-Object { $rel = $_.FullName.Replace((Get-Item resources/js).FullName + [IO.Path]::DirectorySeparatorChar, ''); $target = Join-Path 'public/assets/js' $rel; $dir = Split-Path $target; if (!(Test-Path $dir)) { New-Item -ItemType Directory -Force -Path $dir | Out-Null }; npx terser $_.FullName -o $target --compress --mangle }\"",
    "// Komprimiert und verschleiert JavaScript für minimale Dateigrößen.": "",
    "make:css": "npm-run-all2 css:sass css:post",
    "// Orchestriert die CSS-Pipeline von Sass bis zur PostCSS-Veredelung.": "",
    "css:sass": "sass resources/scss/main.scss public/assets/css/main.css --no-source-map",
    "// (Intern) Kompiliert SCSS zu rohem CSS ohne Source-Maps.": "",
    "css:post": "postcss public/assets/css/main.css -o public/assets/css/main.min.css -u autoprefixer cssnano --no-map",
    "// (Intern) Veredelt CSS mit Präfixen und finaler Minifizierung.": "",
    "// --- OPTIMIERUNG & ANALYSE ---": "",
    "opt": "npm-run-all2 opt:*",
    "// Führt alle Schritte zur Performance-Optimierung der Assets aus.": "",
    "opt:css": "purgecss --config purgecss.config.js",
    "// Eliminiert ungenutzten CSS-Code aus dem Produktions-Bundle.": "",
    "opt:svg": "svgo --config svgo.config.js -f public/assets/img",
    "// Minifiziert SVG-Vektorgrafiken verlustfrei.": "",
    "opt:crit": "critical https://twokinds.4lima.local --width 1300 --height 900 --target public/assets/css/critical.css --minify",
    "// Berechnet und extrahiert das kritische CSS für den schnellen Seitenaufbau.": "",
    "size:js": "source-map-explorer public/assets/js/main.min.js",
    "// Analysiert visuell die Speicherplatzbelegung im JavaScript-Bundle.": "",
    "size:css": "source-map-explorer public/assets/css/main.min.css",
    "// Analysiert visuell die Zusammensetzung der CSS-Dateigröße.": "",
    "// --- RELEASE-MANAGEMENT ---": "",
    "rel": "standard-version",
    "// Erstellt einen regulären Release basierend auf der Commit-Historie.": "",
    "rel:init": "npm run rel -- --first-release",
    "// Initialisiert das Versioning und erstellt das erste Changelog.": "",
    "rel:alpha": "npm run rel -- --prerelease alpha",
    "// Erstellt oder erhöht eine Alpha-Vorabversion.": "",
    "rel:beta": "npm run rel -- --prerelease beta",
    "// Erstellt oder erhöht eine Beta-Vorabversion.": "",
    "rel:rc": "npm run rel -- --prerelease rc",
    "// Erstellt einen Release Candidate für die finale Abnahme.": "",
    "rel:patch": "npm run rel -- --release-as patch",
    "// Erzwingt einen Patch-Release (z.B. für dringende Bugfixes).": ""
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@cspell/dict-de-de": "^4.1.2",
    "@lhci/cli": "^0.15.1",
    "@prettier/plugin-php": "^0.24.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "cpx2": "^8.0.0",
    "critical": "^7.2.1",
    "cspell": "^9.4.0",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "html_codesniffer": "^2.5.1",
    "markdownlint-cli": "^0.47.0",
    "npm-check-updates": "^19.2.0",
    "npm-run-all2": "^8.0.4",
    "pa11y": "^9.0.1",
    "pa11y-ci": "^4.0.1",
    "pa11y-ci-reporter-html": "^8.0.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "3.6.2",
    "purgecss": "^7.0.2",
    "rimraf": "^6.1.2",
    "sass": "^1.70.0",
    "source-map-explorer": "^2.5.3",
    "standard-version": "^9.5.0",
    "stylelint": "^16.25.0",
    "stylelint-config-recess-order": "^7.4.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-declaration-strict-value": "^1.10.11",
    "stylelint-order": "^7.0.0",
    "svgo": "^4.0.0",
    "terser": "^5.31.0",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "glob": "^9.0.0",
    "inflight": "lru-cache"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ]
}
