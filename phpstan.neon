parameters:
    # Level 0 ist Basis-Checks, 9 (oder 'max') ist extrem strikt.
    # Level 5 ist ein guter Mittelweg für den Start.
    # Level max ist sehr streng, wie in der composer.json definiert
    level: 5

    # Pfade, die analysiert werden sollen
    paths:
        - src
        - tests

    # Temporäres Verzeichnis für Cache (beschleunigt die Analyse)
    tmpDir: .phpstan.cache
