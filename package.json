{
  "name": "famlytokai-frontend",
  "version": "1.1.0",
  "scripts": {
    "scss-build": "sass resources/scss/main.scss:public/assets/css/main.min.css --style compressed",
    "scss-watch": "sass --watch resources/scss/main.scss:public/assets/css/main.min.css",
    "build": "npm run scss-build",
    "watch": "npm-run-all --parallel scss-watch",
    "lint:js": "eslint .",
    "lint:css": "stylelint \"resources/scss/**/*.scss\"",
    "lint": "npm run lint:js && npm run lint:css",
    "format:js": "prettier . --write",
    "format:css": "stylelint \"resources/scss/**/*.scss\" --fix",
    "format": "npm run format:js && npm run format:css"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "sass": "^1.70.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0"
  }
}
