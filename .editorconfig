# Dies ist die oberste Konfigurationsdatei
root = true

# Standard-Regeln für alle Dateien (PHP, JS, SCSS etc. -> 4 Spaces)
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Globales Limit für alle Dateitypen
max_line_length = 120

# Spezifische Regeln für JSON und Markdown (2 Spaces)
# Das verhindert, dass tief verschachtelte Dateien zu breit werden
[*.{json,md,yml}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
