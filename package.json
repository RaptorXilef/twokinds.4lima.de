{
  "name": "twokinds-frontend",
  "scripts": {
    "build": "npm-run-all build:*",
    "build:scss": "sass resources/scss/main.scss:public/assets/css/main.min.css --style compressed",
    "build:js": "terser resources/js/main.js -o public/assets/js/main.min.js --compress --mangle",
    "watch": "npm-run-all --parallel watch:*",
    "watch:scss": "sass --watch resources/scss/main.scss:public/assets/css/main.min.css",
    "watch:js": "terser resources/js/main.js -o public/assets/js/main.min.js --watch",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint resources/js",
    "lint:scss": "stylelint \"resources/scss/**/*.scss\"",
    "lint-ci:html": "pa11y-ci",
    "lint:html-local": "pa11y https://ftk.jus-or.local",
    "fix": "npm-run-all fix:*",
    "fix:js": "prettier resources/js --write",
    "fix:scss": "stylelint \"resources/scss/**/*.scss\" --fix"
  },
  "devDependencies": {
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "html_codesniffer": "^2.5.1",
    "npm-run-all2": "^8.0.4",
    "pa11y": "^9.0.1",
    "pa11y-ci": "^4.0.1",
    "pa11y-ci-reporter-html": "^8.0.1",
    "prettier": "3.6.2",
    "sass": "^1.70.0",
    "stylelint": "^16.25.0",
    "stylelint-config-recess-order": "^7.4.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "terser": "^5.31.0"
  },
  "overrides": {
    "glob": "^9.0.0",
    "inflight": "lru-cache"
  }
}
