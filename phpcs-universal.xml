<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Project Standards">
    <description>Universal PHP 8.3 Standard</description>

    <rule ref="Universal.Arrays.DuplicateArrayKey"/>
    <rule ref="Universal.CodeAnalysis.ConstructorDestructorReturn"/>
    <rule ref="Universal.ControlStructures.DisallowLonelyIf"/>

    <file>src</file>
    <file>tests</file>

    <arg value="p"/>
    <arg name="colors"/>
    <arg name="parallel" value="80"/>
    <arg name="cache" value=".cache/phpcs/.phpcs-unifie.cache"/>
    <arg name="extensions" value="php"/>
</ruleset>
