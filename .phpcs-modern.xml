<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="Project Standards">
    <description>Modern PHP 8.3 Standard</description>

    <rule ref="Modernize"/>

    <file>src</file>
    <file>tests</file>

    <arg value="p"/>
    <arg name="colors"/>
    <arg name="parallel" value="80"/>
    <arg name="cache" value=".cache/phpcs/.phpcs-modern.cache"/>
    <arg name="extensions" value="php"/>
</ruleset>
