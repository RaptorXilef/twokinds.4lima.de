{
    "name": "raptorxilef/twokinds.4lima.de",
    "description": "Dieses Projekt ist eine PHP-basierte Webseite zur Anzeige und Verwaltung der deutschen Ãœbersetzungen des Webcomics \"Twokinds\".",
    "type": "project",
    "license": "CC-BY-NC-SA-4.0",
    "authors": [
        {
            "name": "Felix Maywald",
            "email": "31962607+RaptorXilef@users.noreply.github.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.4",
        "scssphp/scssphp": "^2.0",
        "matthiasmullie/minify": "^1.3",
        "ezyang/htmlpurifier": "^4.19"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^12.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "echo 'Die Installation ist abgeschlossen. CodeSniffer und PHPStan sind bereit.'"
        ],
        "check-standards": "phpcs --standard=PSR12 src/ tests/",
        "fix-standards": "phpcbf --standard=PSR12 src/ tests/",
        "analyse": "phpstan analyse src/ tests/ --level max"
    }
}
