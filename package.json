{
  "name": "twokinds-frontend",
  "version": "5.0.0-alpha.13",
  "description": "Frontend-Setup mit PostCSS, Sass und striktem Linting.",
  "scripts": {
    "//1": "QUALITÄT & FIXES",
    "//2": "BUILD: Für den produktiven Server (klein, schnell, ohne Maps)",
    "clean:css": "rimraf public/assets/css/*",
    "build:scss": "sass resources/scss/main.scss public/assets/css/main.css --no-source-map",
    "postcss:css": "postcss public/assets/css/main.css -o public/assets/css/main.min.css -u autoprefixer cssnano --no-map",
    "compile:css": "npm-run-all2 build:scss postcss:css",
    "//3": "",
    "clean:js": "rimraf public/assets/js/*",
    "build:js": "terser resources/js/main.js -o public/assets/js/main.min.js --compress --mangle",
    "build": "npm-run-all2 clean:css clean:js compile:css build:js optimize",
    "//4": "",
    "//6": "WATCH: Zum Arbeiten (mit Maps für Debugging)",
    "watch:css": "sass --watch resources/scss/main.scss:public/assets/css/main.min.css --source-map",
    "watch:js": "cpx \"resources/js/main.js\" public/assets/js/ --rename main.min.js --watch",
    "watch": "npm-run-all2 --parallel watch:*",
    "//11": "",
    "//10": "TESTING: Prüft die Logik deiner JS-Funktionen - Mit Coverage-Bericht",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run --coverage",
    "//7": "",
    "//9": "QUALITÄT & FIXES",
    "lint": "npm-run-all2 lint:*",
    "lint:js": "eslint resources/js",
    "lint:scss": "stylelint \"resources/scss/**/*.scss\"",
    "lint:spelling": "cspell lint \"**/*.{js,scss,php,md}\" --no-progress",
    "//lint:commit": "commitlint --from=master",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules",
    "//12": "PERFORMANCE: Misst Speed, SEO und Best Practices",
    "lint:perf": "lhci autorun",
    "lint:security": "npm audit",
    "lint-ci:html": "pa11y-ci",
    "lint:html-local": "pa11y https://twokinds.4lima.local",
    "//14": "",
    "//13": "VISUALIZE: Woher kommt der Speicherverbrauch?",
    "analyze:js": "source-map-explorer public/assets/js/main.min.js",
    "analyze:css": "source-map-explorer public/assets/css/main.min.css",
    "//21": "RELEASE & AUTOMATION",
    "release": "standard-version",
    "//20": "",
    "//19": "CRITICAL: Extrahiert Above-the-fold CSS",
    "critical": "critical https://twokinds.4lima.local --width 1300 --height 900 --target public/assets/css/critical.css --minify",
    "//8": "",
    "//5": "FIXES und Autokorrekturen",
    "fix": "npm-run-all2 fix:*",
    "fix:js": "prettier \"resources/js/**/*.js\" --write",
    "fix:scss": "prettier \"resources/scss/**/*.scss\" --write && stylelint \"resources/scss/**/*.scss\" --fix",
    "fix:html": "prettier \"**/*.html\" --write",
    "//17": "",
    "//15": "OPTIMIZE: Bilder und ungenutzten Code entfernen",
    "optimize:css": "purgecss --config purgecss.config.js",
    "optimize:svg": "svgo --config svgo.config.js -f public/assets/img",
    "optimize": "npm-run-all2 optimize:*",
    "//16": "MAINTENANCE: Pakete auf dem neuesten Stand halten",
    "deps:check": "ncu",
    "deps:update": "ncu -u && npm install"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@cspell/dict-de-de": "^4.1.2",
    "@lhci/cli": "^0.15.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "cpx2": "^8.0.0",
    "critical": "^7.2.1",
    "cspell": "^9.4.0",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "html_codesniffer": "^2.5.1",
    "markdownlint-cli": "^0.47.0",
    "npm-check-updates": "^19.2.0",
    "npm-run-all2": "^8.0.4",
    "pa11y": "^9.0.1",
    "pa11y-ci": "^4.0.1",
    "pa11y-ci-reporter-html": "^8.0.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "prettier": "3.6.2",
    "purgecss": "^7.0.2",
    "rimraf": "^6.1.2",
    "sass": "^1.70.0",
    "source-map-explorer": "^2.5.3",
    "standard-version": "^9.5.0",
    "stylelint": "^16.25.0",
    "stylelint-config-recess-order": "^7.4.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-declaration-strict-value": "^1.10.11",
    "stylelint-order": "^7.0.0",
    "svgo": "^4.0.0",
    "terser": "^5.31.0",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "glob": "^9.0.0",
    "inflight": "lru-cache"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ]
}
